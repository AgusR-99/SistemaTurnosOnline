@inherits NavMenuBase

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SistemaTurnosOnline.Web</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <span class="text-light">Profesores</span>
        </div>
        @foreach (var tab in tabsProfesor)
        {
            <Tab _Class="@tab.Class" _Text="@tab.Text"></Tab>
        }
        <div class="nav-item px-3">
            <span class="text-light">Carreras</span>
        </div>
        @foreach (var tab in tabsCarreras)
        {
            <Tab _Class="@tab.Class" _Text="@tab.Text"></Tab>
        }
    </nav>
</div>