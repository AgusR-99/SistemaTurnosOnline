@page "/sign-in"
@inherits SignInBase

<EditForm OnValidSubmit="@SignIn_Click" Model="Form">
    <FluentValidationValidator />
    <div class="w-50 mx-auto">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating mb-3">
            <InputText @bind-Value="@Form.Dni" class="form-control" id="floatingInput" placeholder="name@example.com"/>
            <label for="floatingInput">DNI</label>
            <ValidationMessage For="@(() => Form.Dni)" />
        </div>

        <div class="form-floating mb-3">
            <InputText @bind-Value="@Form.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password"/>
            <label for="floatingPassword">Password</label>
            <ValidationMessage For="@(() => Form.Password)" />
        </div>

        <div class="d-flex justify-content-center">
            <button class="btn btn-lg btn-primary" type="submit">Ingresar</button>
        </div>
    </div>
</EditForm>

