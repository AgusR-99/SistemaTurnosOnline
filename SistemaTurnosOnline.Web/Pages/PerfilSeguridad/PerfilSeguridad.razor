@page "/profile/security"
@using SistemaTurnosOnline.Web.Components.CssConstants
@using SistemaTurnosOnline.Web.Components.FormComponent
@using SistemaTurnosOnline.Web.Components.FormComponent.FormHeaders
@inherits PerfilSeguridadBase
@attribute [Authorize(Roles = "Admin, Guest")]

<Animate Animation="Animations.Fade">

    <Form Icon="@IconConstants.Lock" Header="@FormHeaderText.Security">

        <EditForm Model=@ProfileSecurityForm OnValidSubmit="@UpdateProfesor_Click">

            <FluentValidationValidator @ref="_fluentValidationValidator"
                                       DisableAssemblyScanning="@true" />

            <FloatingInputText @bind-Value="ProfileSecurityForm.Password" FieldName="Contraseña" Type="password"></FloatingInputText>

            <FloatingInputText @bind-Value="ProfileSecurityForm.NewPassword" FieldName="Nueva contraseña" Type="password"></FloatingInputText>

            <FloatingInputText @bind-Value="ProfileSecurityForm.NewPasswordConfirm" FieldName="Repetir nueva contraseña" Type="password"></FloatingInputText>

            <ButtonSubmitWide Text="Guardar"/>

        </EditForm>

    </Form>

</Animate>

<!-- Modal -->
<div class="modal fade" id="@PasswordActualizado_Modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="@PasswordActualizado_Modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updatedModalLabel">Accion realizada con exito</h5>
            </div>
            <div class="modal-body">
                Se ha actualizado la contraseña exitosamente
            </div>
            <div class="modal-footer justify-content-center">
                <a @onclick="() => Navigate_Click()" data-bs-dismiss="modal" class="btn btn-success">Aceptar</a>
            </div>
        </div>
    </div>
</div>