@page "/carrera/create"
@inherits CrearCarreraBase
@attribute [Authorize(Roles = "Admin")]

<Animate Animation="Animations.Fade">
    <div class="w-50 mx-auto">
        <div class="mb-3">
            <h3><i class="fa-solid fa-plus"></i> Agregar nueva carrera</h3>
        </div>

        <EditForm Model="@Carrera" OnValidSubmit="@CreateCarrera_Click">

            <FluentValidationValidator />

            <FloatingInputText @bind-Value="Carrera.Nombre"></FloatingInputText>

            <FloatingInputText @bind-Value="Carrera.Codigo" Type="number"></FloatingInputText>

            <ButtonSubmitWide Text="Crear"></ButtonSubmitWide>

        </EditForm>

        @foreach (var Toast in Toasts)
        {
            <Toast Id="@Toast.Id" HeaderClass="@Toast.HeaderClass"
               Icon="@Toast.Icon" Title="@Toast.Title"
               Text="@Toast.Text" Time="@Toast.Time"></Toast>
        }
    </div>
</Animate>