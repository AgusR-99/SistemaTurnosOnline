@page "/profesor/activate"
@page "/profesor/activate/{id}"
@using SistemaTurnosOnline.Web.Components.ToastComponent.DangerToast
@using SistemaTurnosOnline.Web.Extensions
@using SistemaTurnosOnline.Web.Utils
@inherits AltaProfesorBase
@attribute [Authorize(Roles = "Admin")]

<div class="w-50 mx-auto">
    <div class="d-flex">
        <a href="/profesor/readinactive" class="p-0 text-light"><span class="oi oi-arrow-left"></span></a>
        <div class="ms-3">
            <h3><i class="fa-solid fa-check"></i> Activar usuario</h3>
            <p class="text-muted">#@Profesor.Id</p>
        </div>
    </div>

    <EditForm Model=@Profesor OnValidSubmit="@ActivateProfesor_Click">
        <FluentValidationValidator />
        <div class="form-floating mb-3">
            <InputText @bind-Value="Profesor.Dni" type=" number" class="form-control" id="dniInput" placeholder="1234" />
            <label for="dniInput">DNI</label>
            <ValidationMessage For="@(() => Profesor.Dni)" />
        </div>

        <div class="form-floating mb-3">
            <InputText @bind-Value="Profesor.Nombre" type="text" class="form-control" id="nombreInput" placeholder="name" />
            <label for="nombreInput">Nombre y Apellido</label>
            <ValidationMessage For="@(() => Profesor.Nombre)" />
        </div>

        <div class="form-floating mb-3">
            <InputText @bind-Value="Profesor.Email" type="email" class="form-control" id="emailInput" placeholder="name@example.com" />
            <label for="emailInput">Direccion Email</label>
            <ValidationMessage For="@(() => Profesor.Email)" />
        </div>

        @if (Carreras == null)
        {
            <div class="d-flex align-items-center">
                <div class="spinner-border text-primary mx-auto" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else
        {
            <p class="mb-0 lh-1">Carrera</p>

            <small class="text-muted pt-0">Inscripto en:</small>

            <div class="form-check mb-2 mt-2">
                @foreach (var carrera in CarrerasForm)
                {
                    <div class="form-check">
                        @if (carrera.IsChecked)
                        {
                            <input class="form-check-input border-dark" type="checkbox" id="@carrera.Id" @onchange="() => Checkbox_Click(carrera.Id)" checked>
                        }
                        else
                        {
                            <input class="form-check-input border-dark" type="checkbox" id="@carrera.Id" @onchange="() => Checkbox_Click(carrera.Id)">
                        }
                        <label class="form-check-label" for="@carrera.Id">
                            @carrera.Nombre
                        </label>
                    </div>
                }
            </div>
        }

        <DangerToastComponent Id="@ServerErrorToast.Id" Text="@ServerErrorToast.Text" Title="@ServerErrorToast.Title"></DangerToastComponent>
        
        <select class="form-select mb-3 bg-dark text-light border-dark" @bind="@SelectedRol" aria-label="select Rol">
            @foreach (var rol in userRoles)
            {
                <option value="@rol.ToRoleString()">@rol.ToRoleString()</option>
            }
        </select>
        

        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-danger w-50 me-5" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Rechazar
            </button>

            <button type="submit" class="btn btn-success w-50">
                Aprobar
            </button>
        </div>
    </EditForm>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Esta seguro que quieres rechazar la cuenta?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="alert alert-danger d-flex m-0 align-items-center" role="alert">
                    <i class="me-2 fa-solid fa-exclamation-triangle"></i>
                    <div class="text-light">
                        Esta accion es irreversible.
                    </div>
                </div>
                <div class="modal-body">
                    <div>
                        Se eliminaran todos los datos relacionados a esta solicitud.
                    </div>
                    <div class="mt-2">
                        Los datos no podran ser recuperados.
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-danger w-100" data-bs-dismiss="modal"
                            @onclick="() => DeleteProfesor_Click()">
                        Rechazar solicitud de cuenta
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="@ModalAdminPrompt" tabindex="-1" aria-labelledby="modalAdminLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAdminLabel">¿Esta seguro que quieres seleccionar este rol?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="alert alert-warning d-flex m-0 align-items-center" role="alert">
                    <i class="me-2 fa-solid fa-exclamation-triangle"></i>
                    <div class="text-light">
                        Antes de otorgar permisos de administrador, es importante que el usuario comprenda lo que
                        implica este rol y los riesgos que puede conllevar.
                    </div>
                </div>
                <div class="modal-body">
                    <div>
                        En primer lugar, como administrador, el usuario tendrá acceso a información y
                        configuraciones sensibles, por lo que es crucial que mantenga la seguridad y
                        proteja la información confidencial.
                    </div>
                    <div class="mt-2">
                        Además, como administrador, el usuario será responsable de la gestión y
                        supervisión de los demás usuarios y de los sistemas y recursos de la
                        organización.
                    </div>
                    <div class="mt-2">
                        Asimismo, el usuario tendrá el poder para editar y eliminar
                        cuentas de usuario. Esto significa que puede agregar o quitar el acceso de
                        otros usuarios al sistema, incluyendo la capacidad de eliminar cuentas de
                        usuario completamente.
                    </div>
                    <div class="mt-2">
                        Es importante que el usuario entienda que estas capacidades tienen un gran
                        impacto en el funcionamiento del sistema y en la seguridad de la
                        información. Por lo tanto, debe ser cuidadoso al realizar cambios y
                        asegurarse de que los usuarios adecuados tengan acceso a la información
                        correcta.
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal"
                            @onclick='(() => SelectedRol = userRoles.FindUserRole(UserRole.Guest))'>
                        Cancelar
                    </button>
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">
                        Aceptar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="@ModalActivatedId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deletedModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deletedModalLabel">Accion realizada con exito</h5>
                </div>
                <div class="alert alert-success d-flex m-0 align-items-center" role="alert">
                    <i class="me-2 fa-solid fa-circle-check"></i>
                    <div class="text-light">
                        Cuenta aprobada.
                    </div>
                </div>
                <div class="modal-body">
                    Se ha activado la cuenta exitosamente
                </div>
                <div class="modal-footer justify-content-center">
                    <a @onclick="() => Navigate_Click()" data-bs-dismiss="modal" class="btn btn-success">Aceptar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="@ModalDeletedId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deletedModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deletedModalLabel">Accion realizada con exito</h5>
                </div>
                <div class="alert alert-success d-flex m-0 align-items-center" role="alert">
                    <i class="me-2 fa-solid fa-circle-check"></i>
                    <div class="text-light">
                        Cuenta rechazada.
                    </div>
                </div>
                <div class="modal-body">
                    Se ha rechazado la solicitud de cuenta exitosamente
                </div>
                <div class="modal-footer justify-content-center">
                    <a @onclick="() => Navigate_Click()" data-bs-dismiss="modal" class="btn btn-success">Aceptar</a>
                </div>
            </div>
        </div>
    </div>
</div>